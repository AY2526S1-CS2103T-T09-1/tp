@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class Person
Class Address
Class Email
Class Name
Class Phone
Class Tag
Class Rank

Class UniqueAppointmentList
Class Appointment
Class AppointmentId
Class AppointmentDateTime
Class AppointmentLength
Class AppointmentLocation
Class AppointmentType
Class AppointmentMessage
Class AppointmentStatus

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook --> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person --> "1"Name
Person --> "1"Phone
Person --> "0..1"Email
Person --> "0..1"Address
Person --> "*" Tag
Person --> "0..1"Rank

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager --> "~* filtered" Person

AddressBook *--> "1" UniqueAppointmentList
UniqueAppointmentList --> "~* all" Appointment
Appointment --> AppointmentId
Appointment --> AppointmentDateTime
Appointment --> AppointmentLength
Appointment --> AppointmentLocation
Appointment --> AppointmentType
Appointment --> AppointmentMessage
Appointment --> AppointmentStatus

AppointmentLocation -[hidden]up-> AppointmentId
AppointmentMessage -[hidden]up-> AppointmentStatus
AppointmentLength -[hidden]up-> AppointmentType
AppointmentDateTime -[hidden]left-> AppointmentStatus
ModelManager --> "~* filtered" Appointment
@enduml
